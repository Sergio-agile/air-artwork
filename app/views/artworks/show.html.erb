<div class="container">
  <h1><%= @artwork.title %></h1>
  <p><%= @artwork.description %></p>
  <span><%= number_to_currency(@artwork.price, :unit=>'â‚¬') %></span>
  <% @artwork.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
